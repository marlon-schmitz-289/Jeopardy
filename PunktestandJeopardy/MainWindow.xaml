<Window x:Class="PunktestandJeopardy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="500"
        Width="910">
    <Viewbox Stretch="Fill">
        <Grid>
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1"
                                     StartPoint="0.5,0">
                    <GradientStop Color="White"
                                  Offset="0" />
                    <GradientStop Color="#FFFF86BD"
                                  Offset="1" />
                </LinearGradientBrush>
            </Grid.Background>

            <StackPanel Margin="40"
                        Background="White">

                <Label Width="Auto"
                       Height="Auto"
                       Margin="0 20 0 0"
                       FontSize="60"
                       FontWeight="Bold"
                       HorizontalAlignment="Center">
                    Punktestand
                </Label>

                <Grid Margin="0 10 0 0"
                      TextElement.FontSize="40"
                      TextElement.FontWeight="Bold">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="280"
                                          MaxWidth="280" />
                        <ColumnDefinition Width="280"
                                          MaxWidth="280" />
                        <ColumnDefinition Width="280"
                                          MaxWidth="280" />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0"
                           Grid.Column="0"
                           Background="#c34d7a"
                           x:Name="PlayerOne"
                           Foreground="White"
                           HorizontalContentAlignment="Center"
                           Margin="5" />

                    <Label Background="#c34d7a"
                           x:Name="PlayerTwo"
                           Foreground="White"
                           HorizontalContentAlignment="Center"
                           Grid.Row="0"
                           Grid.Column="1"
                           Margin="5" />

                    <Label Background="#c34d7a"
                           x:Name="PlayerThree"
                           Foreground="White"
                           HorizontalContentAlignment="Center"
                           Grid.Row="0"
                           Grid.Column="2"
                           Margin="5" />

                    <Label Content="0"
                           Grid.Row="1"
                           Grid.Column="0"
                           Margin="5"
                           MouseLeftButtonDown="Label_MouseLeftButtonDown"
                           MouseRightButtonDown="Label_MouseRightButtonDown"
                           Background="#e9d0d7"
                           HorizontalContentAlignment="Center" />

                    <Label Content="0"
                           Grid.Row="1"
                           Grid.Column="1"
                           Margin="5"
                           MouseLeftButtonDown="Label_MouseLeftButtonDown"
                           MouseRightButtonDown="Label_MouseRightButtonDown"
                           Background="#e9d0d7"
                           HorizontalContentAlignment="Center" />

                    <Label Content="0"
                           Grid.Row="1"
                           Grid.Column="2"
                           Margin="5"
                           MouseLeftButtonDown="Label_MouseLeftButtonDown"
                           MouseRightButtonDown="Label_MouseRightButtonDown"
                           Background="#e9d0d7"
                           HorizontalContentAlignment="Center" />
                </Grid>
            </StackPanel>
        </Grid>
    </Viewbox>
</Window>