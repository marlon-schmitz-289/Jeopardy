                        Name="CatFiveFive"
                        Click="CatFiveFive_Click" />

                <Button Grid.Row="0"
                        Content="200"
                        Grid.Column="5"
                        Margin="5"
                        Style="{StaticResource CoolButton}"
                        Name="CatSixOne"
                        Click="CatSixOne_Click" />

                <Button Grid.Row="1"
                        Content="400"
                        Grid.Column="5"
                        Margin="5"
                        Style="{StaticResource CoolButton}"
                        Name="CatSixTwo"
                        Click="CatSixTwo_Click" />

                <Button Grid.Row="2"
                        Content="600"
                        Grid.Column="5"
                        Margin="5"
                        Style="{StaticResource CoolButton}"
                        Name="CatSixThree"
                        Click="CatSixThree_Click" />

                <Button Grid.Row="3"
                        Content="800"
                        Grid.Column="5"
                        Margin="5"
                        Style="{StaticResource CoolButton}"
                        Name="CatSixFour"
                        Click="CatSixFour_Click" />

                <Button Grid.Row="4"
                        Content="1000"
                        Grid.Column="5"
                        Margin="5"
                        Style="{StaticResource CoolButton}"
                        Name="CatSixFive"
                        Click="CatSixFive_Click" />
            </Grid>
        </Grid>
    </Viewbox>
</Window>